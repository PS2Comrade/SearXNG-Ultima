{
  "manifest_version": 2,
  "name": "Searx Instance Changer",
  "version": "1.1",
  "description": "Change your default Searx instance from this add-on.",
  "permissions": [
    "storage",
    "webRequest",
    "*://*/search*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
